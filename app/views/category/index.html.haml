= render "products/header"
.category-index.l-single-container
  .visible-pc
    .gray
      %h2
        カテゴリー一覧
      .category-list-nav.slide-nav-parent.text-center.clearfix
        - @categoryroot.each do |root|
          = link_to category_path(id: root.id) ,class: "white category-root-category-link-name" do
            %div
              = root.name

      .category-list-box
        - @categoryroot.each do |root|
          .category-list-individual-box.white.clearfix
            .red.font-white.category-list-individual-box-root-category-name
              %h3
                = root.name

            .category-list-individual-box-inner-box
              = link_to category_path(root.id)  do
                全て
              - root.children.each do |child|
                .category-list-individual-box-sub-category-name
                  %h4
                    = child.name
                .clearfix.category-list-individual-box-sub-sub-category-box
                  .category-list-individual-box-sub-sub-category-name
                    = link_to category_path(child.id) do
                      全て
                  - child.children.each do |child|
                    .category-list-individual-box-sub-sub-category-name
                      = link_to category_path(id: child.id) do
                        = child.name
= render "products/exhibition"
= render "products/footer"
