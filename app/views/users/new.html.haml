.single-container
  = render "users/header.html.haml"
  %main.single-main
    %section.l-single-container
      .l-single-head
        新規会員登録
      .l-single-inner
        .l-single-content
          = link_to new_user_registration_path, class: "btn-default btn-mail" do
            %i.fa.fa-envelope-o.fa-2x
            メールアドレスで登録
          %button#facebook-login.btn-default.btn-sns.btn-sns-facebook
            %i.fa.fa-facebook-official.fa-2x
            Facebookで登録
          %button#google-login.btn-default.btn-sns.btn-sns-google
            %i.fab.fa-google-plus-g.fa-2x
            Googleで登録
  = render "users/footer.html.haml"
