                      %option{value: "15"} 新潟県
                      %option{value: "16"} 富山県
                      %option{value: "17"} 石川県
                      %option{value: "18"} 福井県
                      %option{value: "19"} 山梨県
                      %option{value: "20"} 長野県
                      %option{value: "21"} 岐阜県
