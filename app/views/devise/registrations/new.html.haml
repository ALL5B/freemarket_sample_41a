.single-container
  %header.single-header
    %h1
      %a
        %img{:alt => "mercari", :src => "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?4136293187"}/
    %nav.progress-bar.signup-bar
      %ol.clearfix
        %li.active
          #category2 会員情報
          .progress-status1-1
        %li
          #category 電話番号認証
          .progress-status1-2
        %li
          #category 住所入力
          .progress-status1-3
        %li
          #category 支払い方法
          .progress-status1-4
        %li
          #category 完了
          .progress-status1-5
  %main.single-main
    %section.l-single-container
      %h2.l-single-head
        会員情報登録
      = form_for(resource, as: resource_name, url: registration_path(resource_name))  do |f|
        .l-single-content
          .form-group
            = f.label :nickname do
              ニックネーム
            %span.form-require
              必須
            = f.text_field :name, placeholder: "仮）メルカリ太郎", class: "input-default"
          .form-group
            = f.label :email do
              メールアドレス
            %span.form-require
              必須
            = f.email_field :email, placeholder:"PC・携帯どちらでも可", class: "input-default"
            %input{type:"hidden", name:"login-type"}
          .form-group
            = f.label :password do
              パスワード
            %span.form-require
              必須
            = f.password_field :password, placeholder: "6文字以上", class: "input-default"
          .form-group
            = f.label :password do
              パスワード(確認)
            %span.form-require
              必須
            = f.password_field :password, placeholder: "6文字以上", class: "input-default"
          .form-group
            = recaptcha_tags
          .form-group.rbt
            = f.submit "次に進む", class: "btn-default btn-red"
