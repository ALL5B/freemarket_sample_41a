.single-container
  %header.single-header
    %h1
      %a
        %img{:alt => "mercari", :src => "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?4136293187"}/
    %nav.progress-bar.signup-bar
      %ol.clearfix
        %li.active
          #category2 会員情報
          .progress-status1-1
        %li
          #category 電話番号認証
          .progress-status1-2
        %li
          #category 住所入力
          .progress-status1-3
        %li
          #category 支払い方法
          .progress-status1-4
        %li
          #category 完了
          .progress-status1-5
  %main.single-main
    %section.l-single-container
      %h2.l-single-head
        会員情報入力
      = form_for new_user_registration_path, html: {class: "l-single-inner"} do |f|
        .l-single-content
          .form-group
            %label{for:"nickname"}
              ニックネーム
            %span.form-require
              必須
            %input.input-default{type:"text", name:"name", placeholder:"仮）メルカリ太郎"}
          .form-group
            %label{for:"email"}
              メールアドレス
            %span.form-require
              必須
            %input.input-default{type:"email", name:"email", placeholder:"PC・携帯どちらでも可"}
          %input{type:"hidden", name:"login-type"}
          .form-group
            %label{for:"password"}
              パスワード
            %span.form-require
              必須
            %input.input-default{type:"password", name:"password", placeholder:"6文字以上"}
          .form-group
            %label{for: "password"}
              パスワード(確認)
            %span.form-require
              必須
            %input.input-default{type: "password", name: "password2", placeholder: "6文字以上"}
          %input{type: "hidden", name:"after_save_callback"}
          .form-group
            .g-recaptcha.login-captcha{"data-sitekey" => ""}
              %div{:style => "width: 304px; heigth: 78px;"}
                %div
                  %iframe{:frameborder => "0", :height => "78", :name => "a-dr50ls30j7kl", :role => "presentation", :sandbox => "allow-forms allow-popups allow-same-origin allow-scripts allow-top-navigation allow-modals allow-popups-to-escape-sandbox", :scrolling => "no", :src => "https://www.google.com/recaptcha/api2/anchor?ar=1&k=6LfZGCYTAAAAAHoK-s7Lg5OdYg5Fq4susvALmZoc&co=aHR0cHM6Ly93d3cubWVyY2FyaS5jb206NDQz&hl=ja&v=v1545073489967&size=normal&cb=rtwa7qfilclr", :width => "304"}
                %textarea#g-recaptcha-response.g-recaptcha-response{:name => "g-recaptcha-response", :style => "width: 250px; height: 40px; border: 1px solid rgb(193, 193, 193); margin: 10px 25px; padding: 0px; resize: none; display: none;"}
          .form-group.rbt
          = link_to "secondpage" do
            %button.btn-default.btn-red{type:"submit"}
              次に進む

    %footer
      = render "products/header_logo"
