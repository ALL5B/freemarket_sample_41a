%body
  .single-containerl
    %header.single-headerl
      %h1
        %a{:href => ""}
          %img{:alt => "mercari", :src => "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?594576510"}/
    %main.single-main
      .login-panel
        .login-no-account
          %p アカウントをお持ちでない方はこちら
          %a.new_btn{:href => ""} 新規会員登録
        .login-form-inner
          %button#facebook-login.btn-default.btn-sns.btn-sns-facebook
            %i.fab.fa-facebook.fa-2x
              = link_to user_facebook_omniauth_authorize_path do
                .word-designation
                  Facebookでログイン
          %button#google-login.btn-default.btn-sns.btn-sns-google
            %i.fab.fa-google-plus-g.fa-2x
              = link_to user_google_oauth2_omniauth_authorize_path do
                .word-designation
                  Googleでログイン
        %form{:action => "", :method => "POST", :novalidate => "novalidate"}
          .login-form-inner
            .form-group
              %input.login-input-text.input-default{:name => "email", :placeholder => "メールアドレス", :type => "email", :value => ""}/
            .form-group
              %input.login-input-text.input-default{:name => "password", :placeholder => "パスワード", :type => "password"}/
            .form-group
              = recaptcha_tags
            %button.login-submit.btn-default.btn-red{:type => "submit"} ログイン
            %a.pword{:href => ""} パスワードをお忘れの方

      = render "users/footer.html.haml"
